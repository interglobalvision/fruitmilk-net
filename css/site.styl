@import "resets"
@import "fonts"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(26,26,26)
$color-white-soft = rgb(253,253,253)
$color-taupe = rgb(239,241,241)

$font-alien = 'alienleagueiiital';
$font-luculent-regular = 'luculentregular';

// TYPOGRAPHY

body
  font-family:$font-luculent-regular,helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 2em
  font-family: $font-alien

h2
  font-size: 2em
  font-family: $font-alien

h3
  font-size: 1.5em
  font-family: $font-alien

p
  margin-bottom: 1em
  font-family: $font-luculent-regular


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-taupe
  color: $color-black-soft

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%
  height: 100%
  position: fixed
  h1
    position: absolute
    width: 100%
    top: 47%
    text-align: center
    font-size: 4em
    letter-spacing: .5em

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%


// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
